

<p>
  <strong>Name:</strong>
  <%= @community.name %>
</p>

<p>
  <strong>State:</strong>
  <%= @community.local.district.city.state.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @community.local.district.city.name %>
</p>

<p>
  <strong>District:</strong>
  <%= @community.local.district.name %>
</p>

<p>
  <strong>Local:</strong>
  <%= @community.local.name %>
</p>

<%= link_to 'Edit', edit_community_path(@community) %> |
<%= link_to 'Back', communities_path %>
<div>
  <ol>
    <% @community.microposts.each do |community| %>
      
      <li>
        
        <%= community.content %> posted by <%= community.user.email %>, <%= community.user.personal.fullname %>
     </li>

     <% end %>
    </ol>
</div>